extends ../layouts/common

block content
	h1 Create user

	form(action="/users/create", method="POST")
		.form-group
			label(for="name") Name
			input#name.form-control(name="name", type="text", placeholder="Enter Name")

		.form-group
			label(for="phone") Phone
			input#phone.form-control(name="phone", type="text", placeholder="Enter Phone")

		button.btn.btn-primary Create

block footer