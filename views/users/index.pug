extends ../layouts/common

block content
  h1 
    span.mr-3 Users
    a(href="/users/create", class="btn btn-primary") New
  
  .d-flex.align-items-center
    form.ml-auto(action="/users/search", method="GET")
      div(class="form-group d-flex my-3")
        input(type="text", name="q", class="form-control",placeholder="Enter Name")
        button(class="btn btn-primary ml-2") Search

  table.table
    thead
      tr
        th Avatar
        th(scope='col') Name
        th(scope='col') Phone
        th(scope='col') Actions
    
    tbody
      each user in users
        tr
          td
            img(src=user.avatar, width=30)
          td= user.name
          td= user.phone
          td 
            a.btn.btn-light(href='/users/' + user.id) View
